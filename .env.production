# ARC Production Environment Configuration
# RunPod Deployment Settings

# ============================================================================
# Core Paths
# ============================================================================
ARC_HOME=/workspace/arc
ARC_ENV=production

# ============================================================================
# Operational Mode
# ============================================================================
# Options: SEMI, AUTO, FULL
ARC_MODE=SEMI

# ============================================================================
# LLM Configuration
# ============================================================================
ANTHROPIC_API_KEY=your-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# LLM Timeouts (seconds)
ARC_LLM_TIMEOUT=120
ARC_HISTORIAN_TIMEOUT=600
ARC_LLM_MAX_RETRIES=3
ARC_LLM_RETRY_DELAY=2.0

# ============================================================================
# GPU Configuration
# ============================================================================
# RunPod will auto-assign GPUs
CUDA_VISIBLE_DEVICES=0

# GPU Allocation Policy
ARC_MAX_CONCURRENT_EXPERIMENTS=3
ARC_DEFAULT_GPU_ID=0
TRAINING_GPUS=0,1
INFERENCE_GPU=2

# Training Configuration
ARC_MIN_EPOCHS=3
ARC_DEFAULT_EPOCHS=5
ARC_BASE_BATCH_SIZE=16
ARC_BATCH_SIZE_PER_GPU=16

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# Datasets
# ============================================================================
# Paths are relative to ARC_HOME
DATASET_ROOT=/workspace/arc/workspace/datasets

# ============================================================================
# AcuVue Integration
# ============================================================================
ACUVUE_REPO_PATH=/workspace/AcuVue_repo

# ============================================================================
# Control Plane Settings
# ============================================================================
CONTROL_PLANE_HOST=0.0.0.0
CONTROL_PLANE_PORT=8000
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT_SECONDS=3600

# Polling Configuration
JOB_POLL_INTERVAL=2
CYCLE_POLL_INTERVAL=1

# ============================================================================
# Security
# ============================================================================
# Set to true in production
ENABLE_AUTH=false
API_KEY=changeme-in-production
